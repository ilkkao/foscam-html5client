<script>
    $(function() {
        $('.btn').click(function() {
            $.ajax({
                url: 'login',
                data: {
                    password: $('#password').val()
                }
            }).done(function() {
                location.reload();
            });
        });
    });
</script>

<div class="main">
    <div class="row">
        <form class="col s12">
            <div class="row">
                {{errorMsg}}
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input id="password" type="password" class="validate">
                    <label for="password">{{password_label}}</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <a class="waves-effect waves-light btn">{{login_label}}</a>
                </div>
            </div>
        </div>
    </div>
</div>
